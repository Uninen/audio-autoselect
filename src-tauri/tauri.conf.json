{
  "package": {
    "productName": "Audio Autoselect",
    "version": "0.0.2"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "pnpm vite:dev",
    "beforeBuildCommand": "pnpm vite:build"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "net.uninen.audioautoselect",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "window": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true
      }
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Audio Autoselect",
        "width": 400,
        "height": 350,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "decorations": false,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}